<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <GridLayout
        android:rowCount="4"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/departure_date"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_date"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp" />


        <TextView
            android:id="@+id/tvSourceRunning"
            android:maxWidth="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/sourceAddress"
            android:layout_row="0"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDestinationRunning"
            android:maxWidth="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/destinationAddress"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tvDepartureDateRunning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="@string/date"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvReturnDateRunning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:hint="@string/date"
            android:layout_marginLeft="10dp" />
    </GridLayout>

</androidx.cardview.widget.CardView>